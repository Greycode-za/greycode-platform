{
  "name": "greycode",
  "title": "Greycode IoT Platform",
  "description": "Greycode platform for Greyboard IoT development boards",
  "version": "1.0.0",
  "homepage": "https://github.com/greycode-za/greycode-platform",
  "license": "MIT",
  "engines": {
    "platformio": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/greycode-za/greycode-platform.git"
  },
  "frameworks": {
    "arduino": {
      "package": "framework-arduinoespressif32",
      "script": "builder/frameworks/arduino.py"
    }
  },
  "packages": {
    "toolchain-xtensa-esp32": {
      "type": "toolchain",
      "owner": "platformio",
      "version": "~2.80400.0"
    },
    "framework-arduinoespressif32": {
      "type": "framework",
      "owner": "platformio",
      "version": "~3.20003.0"
    },
    "tool-esptoolpy": {
      "type": "uploader",
      "owner": "platformio",
      "version": "~1.40501.0"
    }
  },
  "build": {
    "core": "esp32"
  }
}
