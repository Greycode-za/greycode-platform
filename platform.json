{
  "name": "greycode",
  "title": "Greycode IoT Platform",
  "description": "Custom PlatformIO platform for Greycode IoT development boards (ESP32-based).",
  "homepage": "https://github.com/greycode-za/greycode-platform",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/greycode-za/greycode-platform.git"
  },
  "packageRepositories": [
    "https://dl.registry.platformio.org"
  ],
  "platforms": {
    "espressif32": {
      "package": "platformio/platform-espressif32",
      "version": "^6.6.0"
    }
  },
  "frameworks": {
    "arduino": {
      "package": "framework-arduinoespressif32",
      "script": "builder/frameworks/arduino.py"
    }
  },
  "boards": {
    "greyboard": "boards/greyboard.json"
  },
  "packages": {
    "toolchain-xtensa-esp32": {
      "type": "toolchain",
      "owner": "platformio",
      "version": "^8.4.0+2021r2"
    },
    "tool-esptoolpy": {
      "type": "uploader",
      "owner": "platformio",
      "version": "^1.40500.0"
    }
  }
}
